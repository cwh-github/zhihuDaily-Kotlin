<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorPrimary"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        >
        <ImageView
            android:id="@+id/mUserImg"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/comment_avatar"
            />
        <TextView
            android:id="@+id/mTvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/mUserImg"
            android:layout_marginStart="12dp"
            android:text="知乎日报"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        >

        <TextView
            android:id="@+id/mTvCollection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:drawableLeft="@mipmap/favorites"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/mTvDownLoad"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="离线下载"
            android:textSize="16sp"
            android:layout_marginStart="24dp"
            android:textColor="@android:color/white"
            android:drawableLeft="@mipmap/download"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>